{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "checkJs": false,
    "allowJs": true,
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": ["./src/**/*.js"]
}
